<sdf version="1.9">
  <model name="simple_robot">
    <pose>0 0 0 0 0 0</pose>
    <static>false</static>

    <!-- ================== CHASSIS ================== -->
    <link name="chassis">
      <!-- Chassis center at z = 0.09, bottom at 0.06 -->
      <pose>0 0 0.09 0 0 0</pose>

      <inertial>
        <mass>3.0</mass>
        <inertia>
          <ixx>0.0125</ixx>
          <iyy>0.025</iyy>
          <izz>0.0325</izz>
        </inertia>
      </inertial>

      <!-- Chassis box: height 0.06 -->
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.22 0.2 0.06</size>
          </box>
        </geometry>
      </collision>

      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>0.22 0.2 0.06</size>
          </box>
        </geometry>
        <material>
          <diffuse>0 0 1 1</diffuse>
        </material>
      </visual>

      <!-- ========= FRONT CASTER (low friction) ========= -->
      <!-- caster center = 0.09 - 0.06 = 0.03; radius 0.03 -> bottom at 0 -->
      <collision name="front_caster_collision">
        <pose>0.10 0 -0.06 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.03</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="front_caster_visual">
        <pose>0.10 0 -0.06 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.03</radius>
          </sphere>
        </geometry>
        <material>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

      <!-- ========= REAR CASTER (low friction) ========= -->
      <collision name="rear_caster_collision">
        <pose>-0.07 0 -0.06 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.03</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="rear_caster_visual">
        <pose>-0.07 0 -0.06 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.03</radius>
          </sphere>
        </geometry>
        <material>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

    </link>

    <!-- ================== LEFT WHEEL ================== -->
    <link name="left_wheel">
      <!-- Wheel center at z = 0.04, radius 0.04 -> bottom at 0 -->
      <pose>0 0.12 0.04 0 0 0</pose>

      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <iyy>0.0005</iyy>
          <izz>0.0005</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <!-- Cylinder axis rotated so local Z becomes Y -->
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>1 0 0 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- ================== RIGHT WHEEL ================== -->
    <link name="right_wheel">
      <pose>0 -0.12 0.04 0 0 0</pose>

      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0005</ixx>
          <iyy>0.0005</iyy>
          <izz>0.0005</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0 1 0 1</diffuse>
        </material>
      </visual>
    </link>

    <joint name="right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
      </axis>
    </joint>

    <!-- ================== LIDAR ================== -->
    <link name="lidar_link">
      <!-- Chassis top = 0.12; lidar half-length = 0.015 -> center 0.135 -->
      <pose>0.1 0 0.135 0 0 0</pose>

      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>1e-4</ixx>
          <iyy>1e-4</iyy>
          <izz>1e-4</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>

      <visual name="lidar_body_visual">
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.03</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>

      <sensor name="lidar" type="gpu_lidar">
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <topic>scan</topic>
        <frame_id>lidar_link</frame_id>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-1.57</min_angle>
              <max_angle>1.57</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>
            <max>10.0</max>
          </range>
        </lidar>
      </sensor>
    </link>

    <joint name="lidar_joint" type="fixed">
      <parent>chassis</parent>
      <child>lidar_link</child>
    </joint>

    <!-- ================== DIFF DRIVE PLUGIN ================== -->
    <plugin filename="gz-sim-diff-drive-system"
        name="gz::sim::systems::DiffDrive">

  <left_joint>left_wheel_joint</left_joint>
  <right_joint>right_wheel_joint</right_joint>

  <wheel_separation>0.24</wheel_separation>
  <wheel_radius>0.05</wheel_radius>

  <!-- cmd_vel command topic (Gazebo side) -->
  <topic>cmd_vel</topic>

  <!-- Odometry configuration -->
  <odom_topic>odom</odom_topic>                 <!-- Gazebo odom topic name -->
  <odom_frame_id>odom</odom_frame_id>           <!-- world / fixed frame -->
  <robot_base_frame_id>chassis</robot_base_frame_id> <!-- our base link name -->
  <enable_odom_tf>true</enable_odom_tf>         <!-- publish TF inside Gazebo -->
</plugin>

  </model>
</sdf>
